<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/popperjs/core@2"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/Content/css/Layout.css">
</head>

<aside class="sidebar">
    <div class="sidebar-header">
        <div>
            <img src="~/images/Login/Logo.png"
                 style="max-width: 80px; /* Tamaño por defecto (ajustable) */
                 height: auto;
                 border-radius: 50%; /* Forma circular */
                 padding: 0.5rem;">
        </div>
        <div>
            <h4 style="color: azure; font-family; 'Poppins', sans-serif;">RunGym</h4>
        </div>
    </div>

    <hr style="color: #ffffff" />

    <nav class="sidebar-nav">
        <a href="@Url.Action("Index", "Home")" class="nav-item" id="inicio-link">
            <img src="~/Images/Menu/Home.png" alt="Inicio">
            <span>Inicio</span>
        </a>
        <a href="@Url.Action("Rutinas", "Home")" class="nav-item" id="rutinas-link">
            <img src="~/Images/Menu/Rutinas.png" alt="Rutinas">
            <span>Rutinas</span>
        </a>
        <a href="@Url.Action("Dieta", "Home")" class="nav-item" id="dieta-link">
            <img src="~/Images/Menu/Dieta.png" alt="Dieta">
            <span>Dieta</span>
        </a>
    </nav>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="sidebar-footer">
        <a href="@Url.Action("Notificaciones","Notificaciones")" class="nav-item" id="Ayuda-link">
            <img src="~/Images/Notificaciones/Notificaciones.png" alt="Notificaciones" />
            <span>Notificaciones</span>
        </a>
        <a href="@Url.Action("Contact", "Home")" class="nav-item" id="Ayuda-link">
            <img src="~/Images/Menu/Ayuda.png" alt="Ayuda">
            <span>Ayuda</span>
        </a>
    </div>
</aside>
<div class="content">
    <div id="content">
        @RenderBody()
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const navItems = document.querySelectorAll('.nav-item');

        // Efecto adicional al hacer clic
        navItems.forEach(item => {
            item.addEventListener('click', function () {
                this.style.transform = 'translateX(15px)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 300);
            });
        });
    });
</script>
<style>
        :root {
            --primary-color: #4361ee;
            --hover-color: #3f37c9;
            --glow-effect: 0 0 15px rgba(67, 97, 238, 0.7);
        }

        /* Estilos generales */
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            background-image: url('../../images/Login/Fondo.jpg');
            background-size: cover;
            background-position: center;
            display: flex;
            min-height: 100vh;
            color: #ffffff;
            overflow-x: hidden;
        }

        /* Sidebar con efecto neón */
        .sidebar {
            width: 250px;
            height: 100vh;
            padding: 20px 15px;
            background-color: rgba(26, 26, 27, 0.85);
            box-sizing: border-box;
            position: fixed;
            left: 0;
            top: 0;
            display: flex;
            flex-direction: column;
            z-index: 1000;
            backdrop-filter: blur(8px);
            border-right: 1px solid rgba(67, 97, 238, 0.2);
        }

        /* Header con efecto de luz */
        .sidebar-header {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 30px;
            text-align: center;
            position: relative;
        }

        .sidebar-header::after {
            content: '';
            position: absolute;
            bottom: -15px;
            left: 25%;
            width: 50%;
            height: 2px;
            background: linear-gradient(90deg, transparent, var(--primary-color), transparent);
            border-radius: 100%;
        }

        .sidebar-header img {
            max-width: 80px;
            height: auto;
            border-radius: 50%;
            padding: 0.5rem;
            border: 2px solid var(--primary-color);
            box-shadow: var(--glow-effect);
            transition: all 0.5s ease;
            filter: drop-shadow(0 0 5px var(--primary-color));
        }

        .sidebar-header img:hover {
            transform: scale(1.1) rotate(10deg);
            box-shadow: 0 0 25px rgba(67, 97, 238, 0.9);
        }

        .sidebar-header h4 {
            color: #ffffff;
            font-weight: 700;
            font-size: 1.5rem;
            margin-top: 15px;
            letter-spacing: 2px;
            text-shadow: var(--glow-effect);
            transition: all 0.3s ease;
        }

        /* Separador futurista */
        .sidebar hr {
            border: none;
            height: 1px;
            background: linear-gradient(90deg, transparent, var(--primary-color), transparent);
            margin: 20px 0;
            width: 100%;
            opacity: 0.5;
        }

        /* Navegación con efecto holográfico */
        .sidebar-nav {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .sidebar-nav a {
            display: flex;
            align-items: center;
            color: #ffffff;
            text-decoration: none;
            padding: 15px 25px;
            margin-bottom: 8px;
            border-radius: 6px;
            position: relative;
            overflow: hidden;
            transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            background-color: rgba(67, 97, 238, 0.05);
            border-left: 3px solid transparent;
        }

        /* Efecto de borde animado */
        .sidebar-nav a::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 3px;
            height: 100%;
            background: var(--primary-color);
            transform: scaleY(0);
            transform-origin: bottom;
            transition: transform 0.4s ease;
        }

        /* Animación principal al hacer hover */
        .sidebar-nav a:hover {
            background-color: rgba(67, 97, 238, 0.15);
            transform: translateX(10px) scale(1.02);
            border-left: 3px solid var(--primary-color);
            box-shadow: var(--glow-effect);
        }

        .sidebar-nav a:hover::before {
            transform: scaleY(1);
            transform-origin: top;
        }

        /* Animación de iconos flotantes */
        .sidebar-nav img {
            width: 24px;
            height: 24px;
            margin-right: 25px;
            filter: brightness(0) invert(1) drop-shadow(0 0 3px var(--primary-color));
            transition: all 0.6s cubic-bezier(0.68, -0.6, 0.32, 1.6);
        }

        .sidebar-nav a:hover img {
            transform: translateY(-5px) rotate(15deg) scale(1.2);
            filter: brightness(0) invert(1) drop-shadow(0 0 8px var(--primary-color));
            animation: float 2s ease-in-out infinite;
        }

        .keyframes float {
            0%, 100% { transform: translateY(-5px) rotate(15deg) scale(1.2); }
            50% { transform: translateY(3px) rotate(15deg) scale(1.2); }
        }

        /* Efecto para el texto */
        .sidebar-nav a span {
            display: inline-block;
            transition: all 0.4s ease;
            letter-spacing: 0.5px;
        }

        .sidebar-nav a:hover span {
            transform: translateX(10px);
            letter-spacing: 1px;
            text-shadow: 0 0 10px var(--primary-color);
        }

        /* Footer con efecto de pulsación */
        .sidebar-footer {
            margin-top: auto;
            padding-top: 20px;
            border-top: 1px solid rgba(67, 97, 238, 0.3);
        }

        .sidebar-footer a {
            display: flex;
            align-items: center;
            color: #ffffff;
            text-decoration: none;
            padding: 15px 25px;
            border-radius: 6px;
            transition: all 0.4s ease;
            position: relative;
        }

        .sidebar-footer a:hover {
            background-color: rgba(67, 97, 238, 0.1);
            animation: pulse 1.5s infinite;
        }

        .keyframes pulse {
            0% { box-shadow: 0 0 0 0 rgba(67, 97, 238, 0.4); }
            70% { box-shadow: 0 0 0 10px rgba(67, 97, 238, 0); }
            100% { box-shadow: 0 0 0 0 rgba(67, 97, 238, 0); }
        }

        .sidebar-footer img {
            width: 22px;
            height: 22px;
            margin-right: 25px;
            filter: brightness(0) invert(1) drop-shadow(0 0 2px var(--primary-color));
            transition: all 0.4s ease;
        }

        .sidebar-footer a:hover img {
            transform: rotate(360deg);
        }

        /* Contenido principal */
        .content {
            margin-left: 250px;
            flex-grow: 1;
            padding: 25px;
            background-color: rgba(0, 0, 0, 0.7);
            min-height: 100vh;
            backdrop-filter: blur(3px);
        }

        /* Responsive */
        .media (max-width: 768px) {
            .sidebar {
                width: 80px;
                padding: 15px 10px;
                align-items: center;
            }

            .sidebar-header h4,
            .sidebar-nav span,
            .sidebar-footer span {
                display: none;
            }

            .sidebar-nav a,
            .sidebar-footer a {
                justify-content: center;
                padding: 18px 10px;
                margin-bottom: 10px;
            }

            .sidebar-nav img,
            .sidebar-footer img {
                margin-right: 0;
                width: 26px;
                height: 26px;
            }

            .content {
                margin-left: 80px;
            }

            .sidebar-header img {
                max-width: 60px;
            }
        }
</style>