@{
    ViewBag.Title = "Welcome";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RUNGYM - Bienvenido</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link href="~/Content/css/Welcome.css" rel="stylesheet" />
</head>
<body>
    <div class="container-welcome">
        <div class="logo-container">
            <img src="~/images/Login/Logo.png" alt="RunGym Logo" class="logo img-fluid" aria-label="RunGym Logo">
        </div>
        
        <h3>RUNGYM</h3>
        
        <div class="button-container">
            <a href="@Url.Action("Registro", "Registro")" class="btn btn-primary">Crear mi programa de entrenamiento</a>
        </div>
        
        <a href="@Url.Action("Login", "Login")" class="btn btn-secondary">Ya tengo mi cuenta</a>
        
        <div class="footer-text">
            <p style="color: darkorange;">Al continuar, aceptas nuestros <a href="terminos.html">términos de uso</a> y nuestra <a href="privacidad.html">política de privacidad</a></p>
            <p style="color: darkorange;">¿Necesitas ayuda? <a href="contactanos.html">Contáctanos</a></p>
        </div>
    </div>

    <script>
        // Efecto de partículas dinámicas
        document.addEventListener('DOMContentLoaded', function() {
            const container = document.body;
            const particleCount = 30;
            
            for (let i = 0; i < particleCount; i++) {
                createParticle();
            }
            
            function createParticle() {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                
                // Tamaño aleatorio entre 2px y 6px
                const size = Math.random() * 4 + 2;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                
                // Posición aleatoria
                particle.style.left = `${Math.random() * 100}vw`;
                particle.style.top = `${Math.random() * 100}vh`;
                
                // Opacidad aleatoria
                particle.style.opacity = Math.random() * 0.5 + 0.1;
                
                container.appendChild(particle);
                
                // Animación
                animateParticle(particle);
            }
            
            function animateParticle(particle) {
                let posX = parseFloat(particle.style.left);
                let posY = parseFloat(particle.style.top);
                const speedX = (Math.random() - 0.5) * 0.2;
                const speedY = (Math.random() - 0.5) * 0.2;
                
                function move() {
                    posX += speedX;
                    posY += speedY;
                    
                    // Reaparecer en el otro lado si sale de la pantalla
                    if (posX > 50) posX = 0;
                    if (posX < 0) posX = 50;
                    if (posY > 50) posY = 0;
                    if (posY < 0) posY = 50;
                    
                    particle.style.left = `${posX}vw`;
                    particle.style.top = `${posY}vh`;
                    
                    requestAnimationFrame(move);
                }
                
                move();
            }
        });
    </script>
</body>
</html>
