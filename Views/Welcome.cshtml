
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RUNGYM - Bienvenido</title>
    <meta name="description" content="Crea tu programa de entrenamiento personalizado con RUNGYM">

    <!-- Preload de recursos críticos -->
    <link rel="preload" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" as="style">
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" as="style">
    <link rel="preload" href="~/Content/css/Welcome.css" as="style">

    <!-- Hojas de estilo -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link href="~/Content/css/Welcome.css" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" href="~/images/Login/favicon.ico" type="image/x-icon">

    <!-- Preconexión a dominios externos -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="preconnect" href="https://maxcdn.bootstrapcdn.com">
</head>
<body>
    <!-- Contenedor de partículas -->
    <div id="particles-container"></div>

    <!-- Contenido principal -->
    <main class="container-welcome">
        <div class="logo-container">
            <img src="~/images/Login/Logo.png" alt="RUNGYM Logo" class="logo img-fluid" width="180" height="180" loading="eager">
        </div>

        <h1 class="brand-title">RUNGYM</h1>
        <p class="brand-slogan">Transforma tu cuerpo, potencia tu rendimiento</p>

        <div class="button-container">
            <a href="@Url.Action("Registro", "Registro")" class="btn btn-primary" aria-label="Crear mi programa de entrenamiento">
                <span class="btn-icon">🏋️</span>
                <span class="btn-text">Crear mi programa de entrenamiento</span>
            </a>
        </div>

        <a href="@Url.Action("Login", "Login")" class="btn btn-secondary" aria-label="Acceder a mi cuenta">
            <span class="btn-icon">🔑</span>
            <span class="btn-text">Ya tengo mi cuenta</span>
        </a>

        <footer class="footer-text">
            <p>Al continuar, aceptas nuestros <a href="@Url.Action("Terminos", "Legal")" target="_blank" rel="noopener noreferrer">términos de uso</a> y nuestra <a href="@Url.Action("Privacidad", "Legal")" target="_blank" rel="noopener noreferrer">política de privacidad</a></p>
            <p>¿Necesitas ayuda? <a href="@Url.Action("Contacto", "Home")">Contáctanos</a></p>
        </footer>
    </main>

    <!-- Scripts optimizados -->
    <script>
        // Cargar scripts no críticos después de que la página haya cargado
        document.addEventListener('DOMContentLoaded', function () {
            // Crear partículas
            function createParticles() {
                const particlesContainer = document.getElementById('particles-container');
                const particleCount = Math.floor(window.innerWidth / 15); // Ajustar según tamaño pantalla

                // Limpiar contenedor primero
                particlesContainer.innerHTML = '';

                // Crear partículas
                for (let i = 0; i < particleCount; i++) {
                    const particle = document.createElement('div');
                    particle.classList.add('particle');

                    // Tamaño aleatorio entre 2px y 6px
                    const size = Math.random() * 6 + 2;
                    particle.style.width = `${size}px`;
                    particle.style.height = `${size}px`;

                    // Posición aleatoria
                    particle.style.left = `${Math.random() * 100}vw`;
                    particle.style.top = `${Math.random() * 100}vh`;

                    // Opacidad aleatoria
                    particle.style.opacity = Math.random() * 1 + 0.2;

                    // Duración de animación aleatoria
                    const duration = Math.random() * 10 + 5;
                    particle.style.animationDuration = `${duration}s`;
                    particle.style.animationDelay = `${Math.random() * 5}s`;

                    // Color aleatorio (azules/violetas)
                    const hue = Math.floor(Math.random() * 30) + 220;
                    particle.style.backgroundColor = `hsla(${hue}, 80%, 70%, ${particle.style.opacity})`;

                    particlesContainer.appendChild(particle);
                }
            }

            // Ajustar partículas al cambiar tamaño de ventana
            window.addEventListener('resize', function () {
                createParticles();
            });

            // Inicializar
            createParticles();

            // Efecto hover en botones
            const buttons = document.querySelectorAll('.btn');
            buttons.forEach(btn => {
                btn.addEventListener('mouseenter', function () {
                    this.style.transform = 'translateY(-3px)';
                });

                btn.addEventListener('mouseleave', function () {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
</body>
</html>