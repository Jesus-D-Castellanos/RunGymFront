 @model RunGymFront.Models.Dieta
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RunGym - Dieta</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/Dietas.css">
</head>
<body>
</body>
<body>
    <div class="container text-center">
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card">
                    <a href="Dieta Keto Ganar Peso Notable.html">
                        <img src="~/Images/Dieta/keto.jpeg" class="card-img-top" alt="Dieta Keto"/>
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">Dieta Keto</h5>
                        <p class="card-text">Una dieta baja en carbohidratos y alta en grasas, ideal para perder peso rápidamente. El objetivo es que el cuerpo entre en un estado de cetosis.</p><br>
                    </div>
                    <div class="footer">
                        <img src="~/Images/Dieta/keto1.jpg" alt="Dieta queto" style="width: 48%;">
                        <img src="~/Images/Dieta/keto2.jpeg" alt="Dieta queto" style="width: 48%;">
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card">
                    <a href="Dieta Mediterranea Ganar Peso Notable.html">
                        <img src="~/Images/Dieta/mediterranea.jpg" class="card-img-top" alt="Dieta Mediterránea">
                    </a>

                    <div class="card-body">
                        <h5 class="card-title">Dieta Mediterránea</h5>
                        <p class="card-text">Enfocada en alimentos frescos, aceite de oliva, y grasas saludables, promoviendo un estilo de vida equilibrado.</p><br>
                    </div>
                    <div class="footer">
                        <img src="~/Images/Dieta/mediterranea1.jpg" alt="Dieta Mediterránea" style="width: 48%;">
                        <img src="~/Images/Dieta/mediterranea2.jpg" alt="Dieta Mediterránea" style="width: 48%;">
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card">
                    <a href="Dieta Vegetariana Ganar Peso Notable.html">
                        <img src="~/Images/Dieta/vegana.jpeg" class="card-img-top" alt="Dieta Vegetariana">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">Dieta Vegetariana</h5>
                        <p class="card-text">Basada en el consumo de vegetales, frutas, legumbres, y excluyendo carnes y productos animales.</p><br>
                    </div>
                    <div class="footer">
                        <img src="~/Images/Dieta/vegana1.jpeg" alt="Dieta Vegetariana" style="width: 48%;">
                        <img src="~/Images/Dieta/vegana2.jpg" alt="Dieta Vegetariana" style="width: 48%;">
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>