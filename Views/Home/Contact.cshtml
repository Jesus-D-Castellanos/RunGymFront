@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contacto - RunGym</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="~/Content/css/Contac.css" rel="stylesheet" />
</head>
<body>
    <div class="contact-container" id="contacto">
        <div class="contact-info">
            <h2>Información de Contacto</h2>
            <p><i class="fas fa-map-marker-alt"></i> Dirección: Calle Falsa 123, Ciudad, País</p>
            <p><i class="fas fa-phone"></i> Teléfono: +123 456 7890</p>
            <p><i class="fas fa-envelope"></i> Email: info@rungym.com</p>
            <p><i class="fas fa-clock"></i> Horario: Lunes a Viernes - 6:00 AM a 10:00 PM</p>
        </div>

        <div class="contact-form">
            <h2>Envíanos un Mensaje</h2>
            <form>
                <input type="text" placeholder="Nombre" required>
                <input type="email" placeholder="Email" required>
                <input type="text" placeholder="Asunto" required>
                <textarea placeholder="Mensaje" required></textarea>
                <button type="submit">Enviar Mensaje</button>
            </form>
        </div>
    </div>
</body>
</html>